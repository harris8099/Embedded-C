#include <stdint.h>
#include <stdio.h>

int main(void)
{
	uint32_t *pClkctrlreg =   (uint32_t *)0x40023830;
	uint32_t *pPortDModereg = (uint32_t *)0x40020C00;
	uint32_t *pPortDOutreg =  (uint32_t *)0x40020C14;

	//1. enable the clock for GPIOD peripheral in the AHB1ENR (set the 3rd bit position)


	//	uint32_t temp = *pClkctrlreg; // Read operation
	//	temp = temp | 0x08; // Modify
	//	*pClkctrlreg = temp; // write back

				// OR

	//	*pClkctrlreg = *pClkctrlreg | 0x08;

				// OR
//		*pClkctrlreg |= 0x08;

				// OR
		*pClkctrlreg |= (1<<3);

	//2. Configure the mode of the IO pin as output
		//a. Clear the 24th and 25th bit position (CLEAR)
//			*pPortDModereg &= 0xFCFFFFFF;
			*pPortDModereg &= ~(3 << 24);
		//b. make 24th bit position as 1 (SET)
//			*pPortDModereg |= 0x01000000;
			*pPortDModereg |= (1<<24);


	//3. Set Output data registor
//			*pPortDOutreg  |= 0x1000;
//			*pPortDOutreg  |= (1<<12);

		while(1){
			*pPortDOutreg  |= (1<<12);
			for(uint32_t i =0; i<10000; i++){

			}
			*pPortDOutreg  &= ~(1<<12);
		}
}






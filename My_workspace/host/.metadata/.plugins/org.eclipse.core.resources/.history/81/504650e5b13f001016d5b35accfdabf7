#include <stdio.h>

int main(void){
	char c[6];

	printf("Enter characters: \n");

	for(int i=0; i<6; i++){
		scanf(" %c", &c[i]);
	}

	for(int i=0; i<6; i++){
		printf("Ascii code for %c is %d\n", c[i], c[i]);
	}
	printf("Press ENTER key to exit the application......");
	while(getchar() != '\n'){

	}
	getchar();
	return 0;
}

#include <stdio.h>

int main(void){

	float num1, num2, num3;
	float avg;

	printf("Enter the first number: ");
	fflush(stdout); // use to flush out the contents from output buffer to stdout
	scanf("%f", &num1);
	printf("\nEnter the second number: ");
	fflush(stdout);
	scanf("%f", &num2);
	printf("\nEnter the third number: ");
	fflush(stdout);
	scanf("%f", &num3);

	avg = (num1+num2+num3)/3.0;

	printf("\navg is: %f", avg);

	getchar();
	getchar();
	return 0;
}
